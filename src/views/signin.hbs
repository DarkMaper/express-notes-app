<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-4">
            <h5 class="h1">Iniciar sesión</h5>
            <form method="post">
                <div class="form-group">
                    <label for="login_username"></label>
                    <input type="text" name="username" id="login_username" class="form-control" placeholder="Username">
                </div>
                <div class="form-group mb-2">
                    <label for="login_password"></label>
                    <input type="password" name="password" id="login_password" class="form-control" placeholder="Password">
                </div>
                <div class="text-muted mb-2">¿No tienes cuenta? Crea una <a href="/signup">aquí</a></div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Iniciar sesión</button>
                </div>
            </form>
        </div>
    </div>
</div>