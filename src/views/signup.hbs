<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-4">
            <h5 class="h1">Crear cuenta</h5>
            <form method="post">
                <div class="form-group">
                    <label for="signup_firstname"></label>
                    <input type="text" name="firstName" id="signup_firstname" class="form-control" placeholder="Nombre">
                </div>
                <div class="form-group">
                    <label for="signup_lastname"></label>
                    <input type="text" name="lastName" id="signup_lastname" class="form-control" placeholder="Apellido">
                </div>
                <div class="form-group">
                    <label for="signup_username"></label>
                    <input type="text" name="username" id="signup_username" class="form-control" placeholder="Username">
                </div>
                <div class="form-group">
                    <label for="signup_password"></label>
                    <input type="password" name="password" id="signup_password" class="form-control" placeholder="Password">
                </div>
                <div class="form-group mb-2">
                    <label for="signup_password2"></label>
                    <input type="password" name="password2" id="signup_password2" class="form-control" placeholder="Repetir password">
                </div>
                <div class="text-muted mb-2">¿Ya tienes cuenta? Inicia sesión <a href="/signin">aquí</a></div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Crear cuenta</button>
                </div>
            </form>
        </div>
    </div>
</div>